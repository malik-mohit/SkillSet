@using System.Security.Claims

@{
    var user = Context.User;
    var roleclaim = user.FindFirst(ClaimTypes.Role)?.Value;
    var nameclaim = user.FindFirst(ClaimTypes.Name)?.Value;
    var userid = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />


</head>
<body>

    <div class="dashboardcont">
        <div class="sidebar">
            <div class="logo">

            </div>
            <div class="profile">
                <div class="profilepic">
                    <img src="~/assets/profile.jpeg"/>
                </div>
                <div class="profilename">
                   <h2>@nameclaim</h2>
                </div>
            </div>
            <div class="menu">
                <a asp-action="Cart" asp-controller="User" asp-route-userid="@userid">
                <div class="section">
                    <span class="material-symbols-outlined material-symbols-outlined-cw">
                        shopping_cart
                    </span>
                    <h3>Cart</h3>

                </div>
                </a>
                <a asp-action="MyCourses" asp-controller="User" asp-route-userid="@userid">
                    <div class="section">
                    <span class="material-symbols-outlined material-symbols-outlined-cw">
                        school
                    </span>
                    <h3>Courses</h3>

                </div>
                </a>

                    <a asp-action="UploadCourse" asp-controller="User">
                <div class="section">
                    <span class="material-symbols-outlined  material-symbols-outlined-cw">
                        upload
                    </span>
                    <h3>Upload Course</h3>

                </div>
                </a>
                    <a asp-action ="BlockedCourse" asp-controller="User" asp-route-userid="@userid">
                <div class="section">
                    <span class="material-symbols-outlined  material-symbols-outlined-cw">
                        block
                    </span>
                    <h3>Blocked Courses</h3>

                </div>
                </a>

            </div>

        </div>

   <div class="rightside">
    <div class="dashboardhead">
                <div class="head">

                    <span class="material-symbols-outlined material-symbols-outlined-cb" style="font-size: 2.05rem; margin-left: 2rem;">
                        grid_view
                    </span>
                    <h1>Dashboard</h1>
                </div>
                <div class="home">
                    <a asp-action="Index" asp-controller="Home">
                        <div>
                            <span class="material-symbols-outlined material-symbols-outlined-cb" style="font-size: 2.05rem;">
                                home
                            </span>
                        </div>
                    </a>
                    <div>|</div>
                    <a asp-action="Logout" asp-controller="Account">
                        <div>
                            Logout
                        </div>
                    </a>
                </div>

    </div>
    <div style="height:53rem;">
        @RenderBody()
    </div>
    </div>
    </div>
</body>
</html>
