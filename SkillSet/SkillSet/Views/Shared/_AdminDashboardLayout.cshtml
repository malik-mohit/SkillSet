@using System.Security.Claims

@{
    var user = Context.User;
    var roleclaim = user.FindFirst(ClaimTypes.Role)?.Value;
    var nameclaim = user.FindFirst(ClaimTypes.Name)?.Value;
    var userid = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
@*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
*@

</head>
<body>

    <div class="dashboardcont">
        <div class="sidebar">
            <div class="logo">
            </div>
            <div class="profile">
                <div class="profilepic">
                    <img src="~/assets/profile.jpeg" />
                </div>
                <div class="profilename">
                    <h2>@nameclaim</h2>
                </div>
            </div>
            <div class="menu">
                <a asp-action="ApprovalRequest" asp-controller="Admin">
                    <div class="section">
                        <span class="material-symbols-outlined material-symbols-outlined-cw">
                            rule
                        </span>
                        <h3>Approval Request</h3>

                    </div>
                </a>
                
               
                <a asp-action="BlockedCourses" asp-controller="Admin">
                    <div class="section">
                        <span class="material-symbols-outlined  material-symbols-outlined-cw">
                            block
                        </span>
                        <h3>Blocked Courses</h3>

                    </div>
                </a>


                <a asp-action="AllCourses" asp-controller="Admin">
                    <div class="section">
                        <span class="material-symbols-outlined  material-symbols-outlined-cw">
                            ballot
                        </span>
                        <h3>All Courses</h3>

                    </div>
                </a>

            </div>

        </div>

        <div class="rightside">
            <div class="dashboardhead">
                <div class="head">

                <span class="material-symbols-outlined material-symbols-outlined-cb" style="font-size: 2.05rem; margin-left: 2rem;">
                    grid_view
                </span>
                <h1>Dashboard</h1>
                </div>
                <div class="home">
                    <a asp-action="Index" asp-controller="Home">
                        <div>
                            <span class="material-symbols-outlined material-symbols-outlined-cb" style="font-size: 2.05rem;">
                            home
                        </span>
                        </div>
                    </a>
                    <div>|</div>
                    <a asp-action="Logout" asp-controller="Account">
                        <div>
                            Logout
                        </div>
                    </a>
                </div>
            </div>
            <div >
                @RenderBody()
            </div>
        </div>
    </div>


@*<script src="~/lib/jquery/dist/jquery.min.js"></script>
