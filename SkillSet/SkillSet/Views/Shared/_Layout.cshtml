@model List<Course>

@{
	

	var userid = TempData["userid"];
	var email = TempData["email"];
	var name = TempData["name"]; 
	var role = TempData["role"];
}
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SkillSet</title>
	@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">

	@*    <link rel="stylesheet" href="~/SkillSet.styles.css" asp-append-version="true" />
	*@
</head>
<body>
	<div id="popupform" class="popupform hidden">
		
	</div>
	<header>
		<div class="conte">
			<div class="logo">
<img src="/assets/skillsetlogoo.png" alt="SkillSet"/>			</div>
			<div class="menu">
				<ul>
					<div>
					<li>
						<a asp-action="Index" asp-controller="Home">
							<div class="navicon">
								<div class="material-symbols-outlined">
									home
								</div>
								<div>
									Home
								</div>
							</div>
						</a>
					</li>

			</div>
			<div>
				<li>
					<a asp-action="Courses" asp-controller="User">
						<div class="navicon">
							<div class="material-symbols-outlined">
								school
							</div>
							<div>Courses</div>
						</div>
					</a>
				</li>
			</div>
			<div>
				<li>
					<a href="#aboutus">
						<div class="navicon">
							<div class="material-symbols-outlined">
								group
							</div>
							<div>About Us</div>
						</div>
					</a>
				</li>
			</div>
			<div>
				<li>
					<a href="#contactus">
						<div class="navicon">
							<div class="material-symbols-outlined">
								contact_support
							</div>
							<div>Contact Us</div>
						</div>
					</a>
				</li>
			</div>
			</ul>
		</div>
		<div class="account">
				@{
					string action = "";
					string controller = "";
					if (User.Identity.IsAuthenticated)
					{
						//var claim = claimsPrincipal.Claims;
						//var roleclaim = claim.FirstOrDefault(c => c.Type == ClaimTypes.Role).Value;
						var user = Context.User;
						var roleclaim = user.FindFirst(ClaimTypes.Role)?.Value;
						var idclaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

						if (roleclaim == "admin")
						{
							action = "ApprovalRequest";
							controller = "Admin";
						}
						else
						{
							action = "Cart";
							controller = "User";
						}

						<a asp-action="@action" asp-controller="@controller" asp-route-userid="@idclaim">
					<div>
					
						<span class="material-symbols-outlined material-symbols-outlined-cb" style="font-size: 2.05rem; margin-left: 2rem;">
							grid_view
						</span>
					</div>
					</a>
					<div> |</div>
					<div>
						<a asp-action="Logout" asp-controller="Account" >Logout</a>

				</div>
				
				}
				else
				{
				<div><button id="login" class="loginbtn">Login</button></div>
				<div><button id="signup" class="signupbtn">SignUp</button></div>
				}}
				
		</div>
		</div>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<footer>
		<div class="foot">
			<div style="text-align:center">
							<h1>Skillset.com</h1>

			</div>
			<div class="footmenu">
				<ul>
					<div>
					<li>
						<a asp-action="Index" asp-controller="Home">
								
								<div>
									Home
								</div>
						</a>
					</li>

			</div>
			<div>
				<li>
					<a asp-action="Courses" asp-controller="User">
							
							<div>Courses</div>
					</a>
				</li>
			</div>
			<div>
				<li>
					<a href="#aboutus">
							
							<div>About Us</div>
					</a>
				</li>
			</div>
			<div>
				<li>
					<a href="contactus">
							<div>Contact Us</div>
					</a>
				</li>
			</div>
			</ul>
		</div>
		<br />
		<br />
		<div style="text-align:center">
			Copyright &copy 2023; - All Rights Reserved

		</div>
		</div>
	</footer>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
	<script>
		$('#login').click(function () {
			var element = document.getElementById("popupform");
			element.classList.remove("hidden");
			//$("#popupform").removeClass("hidden");
			$.ajax({
				url: '@Url.Action("PartialLogin", "Account")',
				success: function (result) {
					
					$('#popupform').html(result);
				}
			})
			
		})

		$('#signup').click(function () {
			var element = document.getElementById("popupform");
			element.classList.remove("hidden");
			//$("#popupform").removeClass("hidden");
			$.ajax({
				url: '@Url.Action("PartialRegister", "Account")',
				success: function (result) {

					$('#popupform').html(result);
				}
			})

		})


	</script>
</body>


</html>
